{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently 'bunx @tailwindcss/cli -i ./app/styles.css -o ./dist/styles.css --minify --watch' 'bun --hot ./server/index.tsx --dev'",
    "build": "bunx @tailwindcss/cli -i ./app/styles.css -o ./dist/styles.css --minify && bun run build.tsx",
    "static": "bun run ./server/index.tsx --static",
    "prod": "bun run ./server/index.tsx"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15",
    "concurrently": "^9.2.0",
    "react": "^19",
    "react-dom": "^19",
    "trpc-bun-adapter": "^1.3.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@tailwindcss/cli": "^4.1.12",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "@types/babel__core": "^7.20.5",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "^19.1.0-rc.2"
  }
}
